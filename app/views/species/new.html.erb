<h1>New species</h1>

<% if @species.errors.any? %>
<h3>Please fix these errors:</h3>
<ul>
 <% @species.errors.full_messages.each do |message| %>
  <li><%= message %></li>
 <% end %>
</ul>
<% end %>

<form action="/species" method="post">
  <lable for="species_name">Name</lable>
  <input id="species_name" name="name" type="text">
<button>Create species</button>
</form>

